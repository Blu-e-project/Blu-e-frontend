<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:windowSoftInputMode="adjustResize">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView_requ"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:paddingBottom="50dp">

            <View
                android:id="@+id/mentoringTitleView"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@color/sky"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"></View>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:fontFamily="sans-serif"
                android:text="궁금한 문제가 있어요!"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/backToCenter_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:background="@android:color/transparent"
                android:src="@drawable/arrow_forward_ios"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/rounded_gray"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="86dp"
                android:layout_marginLeft="26dp"/>
            <TextView
                android:id="@+id/nick_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="임금님"
                app:layout_constraintStart_toEndOf="@id/image"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="107dp"
                android:textStyle="bold"
                android:textSize="15sp"
                android:lineHeight="18sp"
                android:textFontWeight="700"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="멘토님"
                app:layout_constraintStart_toEndOf="@id/nick_tv"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="107dp"
                android:textSize="15sp"
                android:lineHeight="18sp"
                android:textFontWeight="500"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/create_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="생성일 "
                app:layout_constraintStart_toEndOf="@id/image"
                android:layout_marginLeft="30dp"
                app:layout_constraintTop_toBottomOf="@id/nick_tv"
                android:textSize="10sp"
                android:lineHeight="24sp"
                android:textFontWeight="400"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/create"
                app:layout_constraintStart_toEndOf="@id/create_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2023.01.17"
                app:layout_constraintTop_toBottomOf="@id/nick_tv"
                android:textSize="10sp"
                android:lineHeight="24sp"
                android:textFontWeight="400"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/update_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/ 수정일 "
                app:layout_constraintStart_toEndOf="@id/create"
                app:layout_constraintTop_toBottomOf="@id/nick_tv"
                android:textSize="10sp"
                android:lineHeight="24sp"
                android:textFontWeight="400"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/update"
                app:layout_constraintStart_toEndOf="@id/update_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2023.01.17"
                app:layout_constraintTop_toBottomOf="@id/nick_tv"
                android:textSize="10sp"
                android:lineHeight="24sp"
                android:textFontWeight="400"
                android:textColor="@color/black"/>

            <ImageView
                android:id="@+id/request_member_post_delete_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:layout_marginTop="110dp"
                android:src="@drawable/dot_delete_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/question_image"
                android:layout_width="301dp"
                android:layout_height="153dp"
                android:width="301dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="174dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginLeft="13dp"
                android:textSize="15sp"
                android:lineHeight="18sp"
                android:textFontWeight="500"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/subject_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textStyle="bold"
                android:text="[과목]"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@+id/question_image"
                app:layout_constraintTop_toBottomOf="@+id/question_image"/>
            <TextView
                android:id="@+id/subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:textStyle="bold"
                android:text="수학"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@+id/subject_tv"
                app:layout_constraintTop_toTopOf="@+id/subject_tv"/>
            <TextView
                android:id="@+id/chapter_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textStyle="bold"
                android:text="[단원]"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@+id/subject_tv"
                app:layout_constraintTop_toBottomOf="@+id/subject_tv"/>
            <TextView
                android:id="@+id/chapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:textStyle="bold"
                android:text="창의문제"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@+id/chapter_tv"
                app:layout_constraintTop_toTopOf="@+id/chapter_tv"/>
            <TextView
                android:id="@+id/problem_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textStyle="bold"
                android:text="[문제]"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@+id/chapter_tv"
                app:layout_constraintTop_toBottomOf="@+id/chapter_tv"/>
            <TextView
                android:id="@+id/problem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="이미지 첨부"
                android:textSize="15sp"
                app:layout_constraintStart_toEndOf="@+id/problem_tv"
                app:layout_constraintTop_toTopOf="@+id/problem_tv"/>
            <TextView
                android:id="@+id/question_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textStyle="bold"
                android:text="[질문]"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@+id/problem_tv"
                app:layout_constraintTop_toBottomOf="@+id/problem_tv"/>
            <TextView
                android:id="@+id/question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="사진 속 Q와 P ... 최단 거리를 구하는 방법을"
                android:textSize="15sp"
                android:inputType="text|textMultiLine"
                android:lines="4"
                android:scrollbars="vertical"
                app:layout_constraintStart_toEndOf="@+id/question_tv"
                app:layout_constraintTop_toTopOf="@+id/question_tv"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_answer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="40dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/question"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/comment_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <View
        android:id="@+id/backgroundWhite"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/white"/>

    <ImageView
        android:id="@+id/memberPicture2"
        android:layout_width="36dp"
        android:layout_height="40dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_gray"
        app:layout_constraintStart_toStartOf="@id/backgroundWhite"
        app:layout_constraintTop_toTopOf="@id/backgroundWhite" />

    <EditText
        android:id="@+id/chat_edit_text"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:layout_marginStart="14dp"
        android:background="@drawable/comment_text_border"
        android:gravity="left|center"
        android:hint="  댓글 달기"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/memberPicture2"
        app:layout_constraintTop_toTopOf="@+id/memberPicture2" />

    <ImageButton
        android:id="@+id/sendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="6dp"
        android:background="@android:color/transparent"
        android:src="@drawable/send"
        app:layout_constraintEnd_toEndOf="@+id/chat_edit_text"
        app:layout_constraintTop_toTopOf="@+id/chat_edit_text" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout >
