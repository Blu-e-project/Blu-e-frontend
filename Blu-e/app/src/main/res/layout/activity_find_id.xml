<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".FindIdActivity">

    <TextView
        android:id="@+id/certificate_ment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="97dp"
        android:layout_marginLeft="20dp"
        android:text="휴대폰 번호 인증"
        android:textColor="#006BCE"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/phone_number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="37dp"
        android:width="218dp"
        android:hint="휴대폰 번호 입력"
        android:lineHeight="18sp"
        android:textColorHint="#6B000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/certificate_ment" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="99dp"
        android:height="40dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/certificate_ment"
        app:layout_constraintStart_toEndOf="@+id/phone_number"
        android:text="인증 요청"
        android:backgroundTint="@color/white"
        />

    <EditText
        android:id="@+id/certificate_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:width="320dp"
        android:hint="인증 번호 입력"
        android:lineHeight="18sp"
        android:textColorHint="#6B000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone_number" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="320dp"
        android:height="45dp"
        android:layout_marginTop="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/certificate_num"
        android:text="아이디 확인"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:lineHeight="22sp"
        android:background="@drawable/rounded_blue"/>

</androidx.constraintlayout.widget.ConstraintLayout>