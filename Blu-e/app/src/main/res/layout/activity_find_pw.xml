<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.FindPwActivity">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/sky"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        ></View>

    <ImageButton
        android:id="@+id/backToCenter_d"
        android:layout_width="10dp"
        android:layout_height="14dp"
        android:background="@android:color/transparent"
        android:src="@drawable/arrow_forward_ios"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:lineHeight="22sp"
        android:text="비밀번호 찾기"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toEndOf="@id/backToCenter_d"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/id_tv"
        app:layout_constraintTop_toBottomOf="@id/view"
        android:layout_marginTop="39dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디"
        android:textStyle="bold"
        android:textSize="20sp"
        android:lineHeight="23sp"
        android:textColor="#006BCE"

        app:layout_constraintStart_toStartOf="@id/id"/>

    <EditText
        android:id="@+id/id"
        android:width="320dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/id_tv"
        android:layout_marginTop="32dp"
        android:layout_width="wrap_content"
        android:textSize="16sp"
        android:lineHeight="18sp"
        android:textColor="#6B000000"
        android:backgroundTint="#006BCE"
        android:layout_height="wrap_content"
        android:hint="아이디 입력"
        />
    <TextView
        android:id="@id/certificate_ment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="휴대폰 번호 인증"
        app:layout_constraintStart_toStartOf="@+id/id"
        app:layout_constraintTop_toBottomOf="@id/id"
        android:layout_marginTop="45dp"
        android:textColor="#006BCE"
        android:textSize="20sp"
        android:lineHeight="23sp"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:width="218dp"
        android:hint="휴대폰 번호 입력"
        android:lineHeight="18sp"
        android:textColorHint="#6B000000"
        android:textSize="16sp"
        android:backgroundTint="#006BCE"
        app:layout_constraintStart_toStartOf="@id/id"
        app:layout_constraintTop_toBottomOf="@id/certificate_ment" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="99dp"
        android:height="40dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="21dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/certificate_ment"
        app:layout_constraintStart_toEndOf="@+id/phone_number"
        android:text="인증 요청"
        android:fontFamily="sans-serif-condensed-medium"
        android:textFontWeight="500"
        android:textSize="14sp"
        android:lineHeight="22sp"
        android:background="@drawable/rounded_blue_edge"
        />
    <EditText
        android:id="@+id/certificate_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:width="320dp"
        android:hint="인증 번호 입력"
        android:lineHeight="18sp"
        android:textColorHint="#6B000000"
        android:textSize="16sp"
        android:backgroundTint="#006BCE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone_number" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="320dp"
        android:height="45dp"
        android:layout_marginTop="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/certificate_num"
        android:textStyle="bold"
        android:text="비밀번호 재설정"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:lineHeight="22sp"
        android:background="@drawable/rounded_blue"/>
</androidx.constraintlayout.widget.ConstraintLayout>