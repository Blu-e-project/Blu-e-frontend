<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.LoginActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="176dp"
        android:fontFamily="sans-serif"
        android:lineHeight="47sp"
        android:text="@string/app_name"
        android:textColor="#006BCE"
        android:textFontWeight="700"

        android:textSize="40sp"
        android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="ID"
            android:fontFamily="sans-serif"
            android:textSize="12sp"
            android:textColor="#006BCE"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="62dp"
            />
        <EditText
            android:id="@+id/user_id"
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:hint="아이디 입력"
            android:textColor="#6B000000"
            android:textSize="16sp"
            android:backgroundTint="#006BCE"
            />
        <TextView
            android:id="@+id/id_msg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif"
            android:textSize="12sp"
            android:textColor="#57FF0000"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="PASSWORD"
            android:fontFamily="sans-serif"
            android:textSize="12sp"
            android:textColor="#006BCE"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="27dp"
            />
        <EditText
            android:inputType="textPassword"
            android:id="@+id/user_pw"
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:hint="비밀번호 입력"
            android:textColor="#6B000000"
            android:textSize="16sp"
            android:backgroundTint="#006BCE"
            />
        <TextView
            android:id="@+id/pw_msg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif"
            android:textSize="12sp"
            android:textColor="#57FF0000"
            android:layout_marginLeft="20dp"
            />
        <Button
            android:id="@+id/login_btn"
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/rounded_blue"
            android:text="로그인"
            android:layout_marginTop="35dp"
            android:textFontWeight="600"
            android:textColor="@color/white"
            android:textSize="16sp"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            >
            <TextView
                android:id="@+id/find_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아이디 찾기"
                android:textSize="12sp"
                android:lineHeight="15sp"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                />
            <TextView
                android:id="@+id/find_pw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호 찾기"
                android:textSize="12sp"
                android:lineHeight="15sp"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"

                />
            <TextView
                android:id="@+id/sign_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회원가입"
                android:textSize="12sp"
                android:lineHeight="15sp"
                android:textColor="@color/black"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>