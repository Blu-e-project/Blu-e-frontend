<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenteeInfoActivity2">
  <View
      android:id="@+id/view"
      android:layout_width="match_parent"
      android:layout_height="56dp"
      android:background="@color/sky"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      ></View>

  <ImageButton
      android:id="@+id/backToCenter_d"
      android:layout_width="10dp"
      android:layout_height="14dp"
      android:background="@android:color/transparent"
      android:src="@drawable/arrow_forward_ios"
      app:layout_constraintStart_toStartOf="parent"
      android:layout_marginLeft="16dp"
      app:layout_constraintBottom_toBottomOf="@+id/view"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="sans-serif"
      android:lineHeight="22sp"
      android:text="멘티 회원가입"
      android:textColor="@color/black"
      android:textSize="18sp"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="@+id/view"
      app:layout_constraintEnd_toEndOf="@+id/view"
      app:layout_constraintStart_toEndOf="@id/backToCenter_d"
      app:layout_constraintTop_toTopOf="parent" />
  <TextView
      android:id="@+id/tv1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintStart_toStartOf="@id/check_pw"
      app:layout_constraintTop_toBottomOf="@id/view"
      android:layout_marginTop="25dp"
      android:text="휴대폰 번호 인증"
      android:textSize="20sp"
      android:textStyle="bold"
      android:lineHeight="23sp"
      android:textColor="#006BCE"
      />
  <EditText
      android:id="@+id/phone_number"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:width="218dp"
      app:layout_constraintStart_toStartOf="@id/check_pw"
      app:layout_constraintTop_toBottomOf="@id/tv1"
      android:layout_marginTop="22dp"
      android:hint="휴대폰 번호 입력"
      android:textSize="16sp"
      android:lineHeight="18sp"
      android:textColor="#6B000000"
      android:backgroundTint="#006BCE"
      />
  <Button
      android:id="@+id/certificate_btn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/tv1"
      android:layout_marginTop="17dp"
      android:layout_marginLeft="9dp"
      app:layout_constraintStart_toEndOf="@id/phone_number"
      android:width="99dp"
      android:height="40dp"
      android:text="인증 요청"
      android:background="@drawable/rounded_blue_edge"
      android:textSize="14sp"
      android:lineHeight="22sp"
      />
  <EditText
      android:id="@+id/certificate_num"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:width="320dp"
      app:layout_constraintStart_toStartOf="@id/check_pw"
      app:layout_constraintTop_toBottomOf="@id/phone_number"
      android:layout_marginTop="43dp"
      android:hint="인증 번호 입력"
      android:textSize="16sp"
      android:lineHeight="18sp"
      android:textColor="#6B000000"
      android:backgroundTint="#006BCE"
      />
  <TextView
      android:id="@+id/id_tv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintStart_toStartOf="@id/check_pw"
      app:layout_constraintTop_toBottomOf="@id/certificate_num"
      android:layout_marginTop="30dp"
      android:text="아이디"
      android:textSize="20sp"
      android:lineHeight="23sp"
      android:textStyle="bold"
      android:textColor="#006BCE"
      />
  <EditText
      android:id="@+id/user_id"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:width="218dp"
      app:layout_constraintStart_toStartOf="@id/check_pw"
      app:layout_constraintTop_toBottomOf="@id/id_tv"
      android:layout_marginTop="22dp"
      android:hint="아이디 입력"
      android:textSize="16sp"
      android:lineHeight="18sp"
      android:textColor="#6B000000"
      android:backgroundTint="#006BCE"
      />
  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:width="99dp"
      android:height="40dp"
      app:layout_constraintStart_toEndOf="@id/user_id"
      android:layout_marginLeft="9dp"
      app:layout_constraintTop_toBottomOf="@id/id_tv"
      android:layout_marginTop="17dp"
      android:text="중복 확인"
      android:background="@drawable/rounded_blue_edge"
      android:textSize="14sp"
      android:lineHeight="22sp"
      />
  <TextView
      android:id="@+id/pw_tv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintStart_toStartOf="@id/check_pw"
      app:layout_constraintTop_toBottomOf="@id/user_id"
      android:layout_marginTop="27dp"
      android:text="비밀번호"
      android:textStyle="bold"
      android:textSize="20sp"
      android:lineHeight="23sp"
      android:textColor="#006BCE"
      />

  <EditText
      android:id="@+id/user_pw"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:width="320dp"
      android:hint="비밀번호 입력"
      app:layout_constraintStart_toStartOf="@id/check_pw"
      app:layout_constraintTop_toBottomOf="@id/pw_tv"
      android:layout_marginTop="22dp"
      android:textSize="16sp"
      android:lineHeight="18sp"
      android:textColor="#6B000000"
      android:backgroundTint="#006BCE"
      />

  <TextView
      android:id="@+id/pw_tv2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintStart_toStartOf="@id/check_pw"
      android:text="비밀번호 확인"
      app:layout_constraintTop_toBottomOf="@id/user_pw"
      android:layout_marginTop="26dp"
      android:textStyle="bold"
      android:textSize="20sp"
      android:lineHeight="23sp"
      android:textColor="#006BCE"
      />
  <EditText
      android:id="@+id/check_pw"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:width="320dp"
      android:hint="비밀번호 재입력"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@id/pw_tv2"
      android:layout_marginTop="22dp"
      android:layout_marginRight="4dp"
      android:textSize="16sp"
      android:lineHeight="18sp"
      android:textColor="#6B000000"
      android:backgroundTint="#006BCE"
      />
  <Button
      android:id="@+id/sign_up_btn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:width="320dp"
      android:height="45dp"
      android:background="@drawable/rounded_blue"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@id/check_pw"
      android:layout_marginTop="112dp"
      android:text="회원가입"
      android:textColor="@color/white"
      android:textSize="16sp"
      android:lineHeight="22sp"
      android:textFontWeight="600"/>
  </androidx.constraintlayout.widget.ConstraintLayout>