<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.MenteeSmsActivity">
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/sky"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        ></View>

    <ImageButton
        android:id="@+id/backToCenter_d"
        android:layout_width="10dp"
        android:layout_height="14dp"
        android:background="@android:color/transparent"
        android:src="@drawable/arrow_forward_ios"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:lineHeight="22sp"
        android:text="멘티 회원가입"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toEndOf="@id/backToCenter_d"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/certificate_ment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:text="휴대폰 번호 인증"
        android:textColor="#006BCE"
        android:textSize="20sp"
        android:lineHeight="23dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/verify_num"
        app:layout_constraintBottom_toTopOf="@+id/phone_number"
        app:layout_constraintTop_toBottomOf="@id/view" />

    <EditText
        android:id="@+id/phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:width="218dp"
        android:hint="휴대폰 번호 입력"
        android:lineHeight="18sp"
        android:textColorHint="#6B000000"
        android:textSize="16sp"
        android:backgroundTint="#006BCE"
        app:layout_constraintStart_toStartOf="@id/verify_num"
        app:layout_constraintTop_toBottomOf="@+id/certificate_ment" />
    <Button
        android:id="@+id/sms_btn"
        android:layout_width="99dp"
        android:layout_height="40dp"
        android:width="99dp"
        android:height="40dp"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/certificate_ment"
        app:layout_constraintStart_toEndOf="@+id/phone_number"
        android:text="인증 요청"
        android:fontFamily="sans-serif-condensed-medium"
        android:textFontWeight="500"
        android:textSize="14sp"
        android:lineHeight="22sp"
        android:background="@drawable/rounded_blue_edge"
        />

    <EditText
        android:id="@+id/verify_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:width="320dp"
        android:hint="인증 번호 입력"
        android:lineHeight="18sp"
        android:textColorHint="#6B000000"
        android:textSize="16sp"
        android:backgroundTint="#006BCE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone_number" />

    <Button
        android:id="@+id/mentee_info_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="320dp"
        android:height="45dp"
        android:layout_marginTop="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/verify_num"
        android:textStyle="bold"
        android:text="멘티 회원 정보 입력"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:lineHeight="22sp"
        android:background="@drawable/rounded_blue"/>

</androidx.constraintlayout.widget.ConstraintLayout>