<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.MentorInfoActivity">
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/sky"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        ></View>

    <ImageButton
        android:id="@+id/backToCenter_d"
        android:layout_width="10dp"
        android:layout_height="14dp"
        android:background="@android:color/transparent"
        android:src="@drawable/arrow_forward_ios"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:lineHeight="22sp"
        android:text="멘토 회원가입"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toEndOf="@id/backToCenter_d"
        app:layout_constraintTop_toTopOf="parent" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/view"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="38dp"
                    android:text="이름"
                    android:textSize="20sp"
                    android:lineHeight="23sp"
                    android:textStyle="bold"
                    android:textColor="#006BCE"
                    />
                <EditText
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="236dp"
                    android:layout_marginTop="36dp"
                    android:layout_marginLeft="51dp"
                    android:hint="실명 입력"
                    android:textSize="16sp"
                    android:lineHeight="18sp"
                    android:textColor="#6B000000"
                    android:backgroundTint="#006BCE"
                    />
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/nickname_tv"
                    android:layout_marginLeft="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="닉네임"
                    android:layout_marginTop="32dp"
                    android:textSize="20sp"
                    android:lineHeight="23sp"
                    android:textStyle="bold"
                    android:textColor="#006BCE"
                    />
                <EditText
                    android:id="@+id/nickname"
                    android:width="131dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="멘티 닉네임 입력"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="35dp"
                    android:textSize="16sp"
                    android:lineHeight="18sp"
                    android:textColor="#6B000000"
                    android:backgroundTint="#006BCE"
                    />
                <Button
                    android:id="@+id/check_nickname_btn"
                    android:layout_width="99dp"
                    android:layout_height="40dp"
                    android:text="중복 확인"
                    android:width="99dp"
                    android:height="40dp"
                    app:layout_constraintTop_toBottomOf="@id/name_tv"
                    android:layout_marginTop="28dp"
                    app:layout_constraintStart_toEndOf="@id/nickname"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/rounded_blue_edge"
                    android:textSize="14sp"
                    android:lineHeight="22sp"
                    />
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/birth_tv"
                    android:layout_marginLeft="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="생년월일"
                    android:layout_marginTop="34dp"
                    android:textSize="20sp"
                    android:lineHeight="23sp"
                    android:textStyle="bold"
                    android:textColor="#006BCE"
                    />
                <EditText
                    android:id="@+id/birth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="236dp"
                    android:hint="예) 0000-00-00"
                    android:layout_marginTop="32dp"
                    android:textSize="16sp"
                    android:lineHeight="18sp"
                    android:layout_marginLeft="14dp"
                    android:textColor="#6B000000"
                    android:backgroundTint="#006BCE"
                    />
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/edu_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="학력"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="41dp"
                    android:textSize="20sp"
                    android:lineHeight="23sp"
                    android:textStyle="bold"
                    android:textColor="#006BCE"
                    />
                <EditText
                    android:id="@+id/education"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="131dp"
                    android:hint="XX대학교"
                    android:layout_marginTop="39dp"
                    android:layout_marginLeft="51dp"
                    android:textSize="16sp"
                    android:lineHeight="18sp"
                    android:textColor="#6B000000"
                    android:backgroundTint="#006BCE"
                    />
                <Button
                    android:layout_width="99dp"
                    android:layout_height="40dp"
                    app:layout_constraintTop_toBottomOf="@id/birth"
                    android:layout_marginTop="28dp"
                    app:layout_constraintStart_toEndOf="@id/education"
                    android:layout_marginLeft="6dp"
                    android:text="학교 검색"
                    android:background="@drawable/rounded_blue_edge"
                    android:textSize="14sp"
                    android:lineHeight="22sp"
                    />
            </androidx.appcompat.widget.LinearLayoutCompat>
            <EditText
                android:id="@+id/major"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="236dp"
                android:hint="학과 입력"
                android:layout_marginTop="39dp"
                android:layout_marginLeft="104dp"
                android:textSize="16sp"
                android:lineHeight="18sp"
                android:textColor="#6B000000"
                android:backgroundTint="#006BCE"
                />
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/addr_tv"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/name_tv"
                    app:layout_constraintTop_toBottomOf="@+id/major"
                    android:layout_marginTop="41dp"
                    android:text="실거주지"
                    android:textSize="20sp"
                    android:lineHeight="23sp"
                    android:textStyle="bold"
                    android:textColor="#006BCE"
                    />
                <EditText
                    android:id="@+id/addr"
                    android:width="236dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="@id/name"
                    android:hint="도/시/동까지 입력"
                    android:layout_marginTop="39dp"
                    android:textSize="16sp"
                    android:lineHeight="18sp"
                    android:layout_marginLeft="14dp"
                    android:textColor="#6B000000"
                    android:backgroundTint="#006BCE"
                    />
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    app:layout_constraintTop_toBottomOf="@id/addr_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="33dp"
                    android:layout_marginLeft="16dp"
                    android:text="한줄소개"
                    android:textSize="20sp"
                    android:lineHeight="23sp"
                    android:textStyle="bold"
                    android:textColor="#006BCE"
                    />
                <EditText
                    android:id="@+id/introduce_ment"
                    android:width="236dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="31dp"
                    android:hint="소개 입력"
                    android:textSize="16sp"
                    android:lineHeight="18sp"
                    android:textColor="#6B000000"
                    android:backgroundTint="#006BCE"
                    />
            </androidx.appcompat.widget.LinearLayoutCompat>
            <TextView
                android:id="@+id/id_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="아이디"
                android:textSize="20sp"
                android:lineHeight="23sp"
                android:layout_marginLeft="16dp"
                android:textStyle="bold"
                android:textColor="#006BCE"
                />
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/user_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="218dp"
                    android:layout_marginTop="22dp"
                    android:hint="아이디 입력"
                    android:textSize="16sp"
                    android:layout_marginLeft="16dp"
                    android:lineHeight="18sp"
                    android:textColor="#6B000000"
                    android:backgroundTint="#006BCE"
                    />
                <Button
                    android:layout_width="99dp"
                    android:layout_height="40dp"
                    android:width="99dp"
                    android:height="40dp"
                    app:layout_constraintStart_toEndOf="@id/user_id"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="17dp"
                    android:text="중복 확인"
                    android:background="@drawable/rounded_blue_edge"
                    android:textSize="14sp"
                    android:lineHeight="22sp"
                    />
            </androidx.appcompat.widget.LinearLayoutCompat>
            <TextView
                android:id="@+id/pw_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:layout_marginLeft="16dp"
                android:text="비밀번호"
                android:textStyle="bold"
                android:textSize="20sp"
                android:lineHeight="23sp"
                android:textColor="#006BCE"
                />

            <EditText
                android:id="@+id/user_pw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="320dp"
                android:hint="비밀번호 입력"
                android:inputType="textPassword"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="16dp"
                android:textSize="16sp"
                android:lineHeight="18sp"
                android:textColor="#6B000000"
                android:backgroundTint="#006BCE"
                />

            <TextView
                android:id="@+id/pw_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호 확인"
                android:layout_marginTop="26dp"
                android:layout_marginLeft="16dp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:lineHeight="23sp"
                android:textColor="#006BCE"
                />
            <EditText
                android:id="@+id/check_pw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="320dp"
                android:hint="비밀번호 재입력"
                android:inputType="textPassword"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="16dp"
                android:textSize="16sp"
                android:lineHeight="18sp"
                android:textColor="#6B000000"
                android:backgroundTint="#006BCE"
                />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                >
                <ImageView
                    android:id="@+id/profile"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/rounded_gray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="22dp"
                    android:layout_marginRight="14dp"
                    tools:ignore="MissingConstraints" />
                <ImageView
                    android:layout_width="41.81dp"
                    android:layout_height="42.37dp"
                    android:layout_marginTop="28.94dp"
                    android:layout_marginLeft="29.1dp"
                    android:src="@drawable/profile_img"
                    app:layout_constraintStart_toStartOf="@id/profile"
                    app:layout_constraintTop_toTopOf="@id/profile"/>
                <ImageButton
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:layout_constraintStart_toStartOf="@id/profile"
                    android:layout_marginLeft="70dp"
                    app:layout_constraintTop_toTopOf="@id/profile"
                    android:background="@drawable/rounded_black"
                    android:layout_marginTop="65dp"

                    />
                <ImageButton
                    android:id="@+id/profile_btn"
                    app:layout_constraintStart_toStartOf="@id/profile"
                    android:layout_marginLeft="79dp"
                    app:layout_constraintTop_toTopOf="@id/profile"
                    android:layout_marginTop="73.64dp"
                    android:layout_width="18.33dp"
                    android:layout_height="18.33dp"
                    android:src="@drawable/profile_btn"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <CheckBox
                android:id="@+id/agree_cb"
                android:layout_marginTop="26dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="개인 정보 수집에 동의하시겠습니까?"
                android:textSize="12sp"
                android:lineHeight="14sp"
                android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                android:button="@null"
                android:layout_marginLeft="100dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Button
                    android:id="@+id/sign_up_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:width="320dp"
                    android:height="45dp"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_blue"
                    android:layout_marginTop="25dp"
                    android:text="회원가입"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:lineHeight="22sp"
                    android:textFontWeight="600"/>
            </LinearLayout>
            ]            <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:width="320dp"
            android:height="45dp"
            android:background="@color/white"
            android:layout_marginTop="25dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:lineHeight="22sp"
            android:textFontWeight="600"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>