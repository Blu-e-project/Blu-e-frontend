<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MentorInfoActivity1">



  <View
      android:id="@+id/view"
      android:layout_width="match_parent"
      android:layout_height="56dp"
      android:background="@color/sky"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      ></View>

  <ImageButton
      android:id="@+id/backToCenter_d"
      android:layout_width="10dp"
      android:layout_height="14dp"
      android:background="@android:color/transparent"
      android:src="@drawable/arrow_forward_ios"
      app:layout_constraintStart_toStartOf="parent"
      android:layout_marginLeft="16dp"
      app:layout_constraintBottom_toBottomOf="@+id/view"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="sans-serif"
      android:lineHeight="22sp"
      android:text="멘토 회원가입"
      android:textColor="@color/black"
      android:textSize="18sp"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="@+id/view"
      app:layout_constraintEnd_toEndOf="@+id/view"
      app:layout_constraintStart_toEndOf="@id/backToCenter_d"
      app:layout_constraintTop_toTopOf="parent" />
  <TextView
      android:id="@+id/name_tv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintStart_toStartOf="parent"
      android:layout_marginLeft="16dp"
      app:layout_constraintTop_toBottomOf="@+id/view"
      app:layout_constraintEnd_toStartOf="@+id/name"
      android:layout_marginRight="23dp"
      android:layout_marginTop="44dp"
      android:text="이름"

      />
  <EditText
      android:id="@+id/name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:width="236dp"
      app:layout_constraintTop_toBottomOf="@+id/view"
      android:layout_marginTop="44dp"
      app:layout_constraintStart_toEndOf="@id/name_tv"
      android:layout_marginLeft="51dp"
      android:hint="실명 입력"/>
  <TextView
      android:id="@+id/nickname_tv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="닉네임"
      app:layout_constraintStart_toStartOf="@id/name_tv"
      app:layout_constraintTop_toBottomOf="@+id/name"
      android:layout_marginTop="39dp"
      />
  <EditText
      android:id="@+id/nickname"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:hint="멘티 닉네임"
      app:layout_constraintTop_toTopOf="@+id/nickname_tv"
      app:layout_constraintStart_toStartOf="@id/name"
      />
  <Button
      android:id="@+id/check_nickname_btn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="중복 확인"
      android:width="99dp"
      android:height="40dp"
      app:layout_constraintTop_toBottomOf="@id/name"
      android:layout_marginTop="28dp"
      app:layout_constraintStart_toEndOf="@id/nickname"
      android:layout_marginLeft="10dp"
      />
  <TextView
      android:id="@+id/birth_tv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="생년월일"
      app:layout_constraintStart_toStartOf="@id/name_tv"
      app:layout_constraintTop_toBottomOf="@+id/check_nickname_btn"
      android:layout_marginTop="33dp"
      />
  <EditText
      android:id="@+id/birth"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:width="236dp"
      android:hint="예) 0000-00-00"
      app:layout_constraintStart_toStartOf="@id/name"
      app:layout_constraintTop_toBottomOf="@id/nickname"
      android:layout_marginTop="32dp"
      />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="학력"
      app:layout_constraintStart_toStartOf="@+id/name_tv"
      app:layout_constraintTop_toBottomOf="@id/birth_tv"
      android:layout_marginTop="44dp"
      />
  <EditText
      android:id="@+id/education"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"

      android:hint="XX고등학교"
      app:layout_constraintStart_toEndOf="@id/name_tv"
      app:layout_constraintTop_toBottomOf="@id/birth"
      android:layout_marginTop="39dp"
      app:layout_constraintStart_toStartOf="@id/name"
      />
  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/birth"
      android:layout_marginTop="28dp"
      app:layout_constraintStart_toEndOf="@id/education"
      android:layout_marginLeft="10dp"
      android:text="학교 검색"
      />
  <EditText
      android:id="@+id/year"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:hint="X학년"
      app:layout_constraintTop_toBottomOf="@id/education"
      android:layout_marginTop="40dp"
      app:layout_constraintStart_toStartOf="@+id/name"
      />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintStart_toStartOf="@id/name_tv"
      app:layout_constraintTop_toBottomOf="@+id/year"
      android:layout_marginTop="32dp"
      android:text="실거주지"/>
  <EditText
      android:id="@+id/addr"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintStart_toStartOf="@id/name"
      android:hint="도/시/동까지 입력"
      app:layout_constraintTop_toBottomOf="@+id/year"
      android:layout_marginTop="30dp"
      />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="프로필 사진"
      app:layout_constraintStart_toStartOf="@id/name_tv"
      app:layout_constraintTop_toBottomOf="@+id/addr"
      android:layout_marginTop="33dp"
      />
  <ImageView
      android:id="@+id/profile"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:maxWidth="200dp"
      android:maxHeight="200dp"
      android:adjustViewBounds="true"
      app:layout_constraintStart_toStartOf="@id/name"
      app:layout_constraintTop_toBottomOf="@id/addr"
      android:src="@drawable/rounded_blue"
      android:layout_marginTop="31dp"
      app:layout_constraintBottom_toTopOf="@id/upload_picture_btn"/>
  <Button
      android:id="@+id/upload_picture_btn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:width="100dp"
      android:text="사진 선택"
      app:layout_constraintStart_toStartOf="@id/profile"
      app:layout_constraintTop_toBottomOf="@id/profile"
      />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintStart_toStartOf="@id/name_tv"
      app:layout_constraintTop_toBottomOf="@id/upload_picture_btn"
      android:layout_marginTop="30dp"
      android:text="한줄소개"/>
  <EditText
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintStart_toStartOf="@id/name"
      app:layout_constraintTop_toBottomOf="@+id/upload_picture_btn"
      android:layout_marginTop="28dp"
      android:hint="소개 입력"
      />

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/view">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

  </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
