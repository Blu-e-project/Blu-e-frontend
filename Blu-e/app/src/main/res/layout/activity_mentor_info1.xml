<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MentorInfoActivity1">



  <View
      android:id="@+id/view"
      android:layout_width="match_parent"
      android:layout_height="56dp"
      android:background="@color/sky"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      ></View>

  <ImageButton
      android:id="@+id/backToCenter_d"
      android:layout_width="10dp"
      android:layout_height="14dp"
      android:background="@android:color/transparent"
      android:src="@drawable/arrow_forward_ios"
      app:layout_constraintStart_toStartOf="parent"
      android:layout_marginLeft="16dp"
      app:layout_constraintBottom_toBottomOf="@+id/view"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="sans-serif"
      android:lineHeight="22sp"
      android:text="멘토 회원가입"
      android:textColor="@color/black"
      android:textSize="18sp"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="@+id/view"
      app:layout_constraintEnd_toEndOf="@+id/view"
      app:layout_constraintStart_toEndOf="@id/backToCenter_d"
      app:layout_constraintTop_toTopOf="parent" />
  <TextView
      android:id="@+id/name_tv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintStart_toStartOf="parent"
      android:layout_marginLeft="16dp"
      app:layout_constraintTop_toBottomOf="@+id/view"
      app:layout_constraintEnd_toStartOf="@+id/name"
      android:layout_marginRight="23dp"
      android:layout_marginTop="38dp"
      android:text="이름"
      android:textSize="20sp"
      android:lineHeight="23sp"
      android:textStyle="bold"
      android:textColor="#006BCE"
      />
  <EditText
      android:id="@+id/name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:width="236dp"
      app:layout_constraintTop_toBottomOf="@+id/view"
      android:layout_marginTop="36dp"
      app:layout_constraintStart_toEndOf="@id/name_tv"
      android:layout_marginLeft="51dp"
      android:hint="실명 입력"
      android:textSize="16sp"
      android:lineHeight="18sp"
      android:textColor="#6B000000"
      android:backgroundTint="#006BCE"
      />
  <TextView
      android:id="@+id/nickname_tv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="닉네임"
      app:layout_constraintStart_toStartOf="@id/name_tv"
      app:layout_constraintTop_toBottomOf="@+id/name_tv"
      android:layout_marginTop="39dp"
      android:textSize="20sp"
      android:lineHeight="23sp"
      android:textStyle="bold"
      android:textColor="#006BCE"
      />
  <EditText
      android:id="@+id/nickname"
      android:width="131dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:hint="멘토 닉네임 입력"
      app:layout_constraintTop_toTopOf="@+id/nickname_tv"
      app:layout_constraintStart_toStartOf="@id/name"
      android:textSize="16sp"
      android:lineHeight="18sp"
      android:textColor="#6B000000"
      android:backgroundTint="#006BCE"
      />
  <Button
      android:id="@+id/check_nickname_btn"
      android:layout_width="99dp"
      android:layout_height="40dp"
      android:text="중복 확인"
      android:width="99dp"
      android:height="40dp"
      app:layout_constraintTop_toBottomOf="@id/name_tv"
      android:layout_marginTop="31dp"
      app:layout_constraintStart_toEndOf="@id/nickname"
      android:layout_marginLeft="10dp"
      android:background="@drawable/rounded_blue_edge"
      android:textSize="14sp"
      android:lineHeight="22sp"
      />
  <TextView
      android:id="@+id/birth_tv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="생년월일"
      app:layout_constraintStart_toStartOf="@id/name_tv"
      app:layout_constraintTop_toBottomOf="@+id/nickname_tv"
      android:layout_marginTop="39dp"
      android:textSize="20sp"
      android:lineHeight="23sp"
      android:textStyle="bold"
      android:textColor="#006BCE"
      />
  <EditText
      android:id="@+id/birth"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:width="236dp"
      android:hint="예) 0000-00-00"
      app:layout_constraintStart_toStartOf="@id/name"
      app:layout_constraintTop_toBottomOf="@id/nickname_tv"
      android:layout_marginTop="37dp"
      android:textSize="16sp"
      android:lineHeight="18sp"
      android:textColor="#6B000000"
      android:backgroundTint="#006BCE"
      />
  <TextView
      android:id="@+id/edu_tv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="학력"
      app:layout_constraintStart_toStartOf="@+id/name_tv"
      app:layout_constraintTop_toBottomOf="@id/birth_tv"
      android:layout_marginTop="44dp"
      android:textSize="20sp"
      android:lineHeight="23sp"
      android:textStyle="bold"
      android:textColor="#006BCE"
      />
  <EditText
      android:id="@+id/education"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:width="131dp"
      android:hint="XX대학교"
      app:layout_constraintStart_toEndOf="@id/name_tv"
      app:layout_constraintTop_toBottomOf="@id/birth_tv"
      android:layout_marginTop="42dp"
      app:layout_constraintStart_toStartOf="@id/name"
      android:textSize="16sp"
      android:lineHeight="18sp"
      android:textColor="#6B000000"
      android:backgroundTint="#006BCE"
      />
  <Button
      android:layout_width="99dp"
      android:layout_height="40dp"
      app:layout_constraintTop_toBottomOf="@id/birth"
      android:layout_marginTop="28dp"
      app:layout_constraintStart_toEndOf="@id/education"
      android:layout_marginLeft="10dp"
      android:text="학교 검색"
      android:background="@drawable/rounded_blue_edge"
      android:textSize="14sp"
      android:lineHeight="22sp"
      />
  <EditText
      android:id="@+id/major"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:width="236dp"
      android:hint="학과 입력"
      app:layout_constraintTop_toBottomOf="@id/edu_tv"
      android:layout_marginTop="43dp"
      app:layout_constraintStart_toStartOf="@+id/name"
      android:textSize="16sp"
      android:lineHeight="18sp"
      android:textColor="#6B000000"
      android:backgroundTint="#006BCE"
      />
  <TextView
      android:id="@+id/addr_tv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintStart_toStartOf="@id/name_tv"
      app:layout_constraintTop_toBottomOf="@+id/major"
      android:layout_marginTop="32dp"
      android:text="실거주지"
      android:textSize="20sp"
      android:lineHeight="23sp"
      android:textStyle="bold"
      android:textColor="#006BCE"
      />
  <EditText
      android:id="@+id/addr"
      android:width="236dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintStart_toStartOf="@id/name"
      android:hint="도/시/동까지 입력"
      app:layout_constraintTop_toBottomOf="@id/edu_tv"
      android:layout_marginTop="101dp"
      android:textSize="16sp"
      android:lineHeight="18sp"
      android:textColor="#6B000000"
      android:backgroundTint="#006BCE"
      />

  <TextView
      app:layout_constraintTop_toBottomOf="@id/addr_tv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintStart_toStartOf="@id/name_tv"
      android:layout_marginTop="36dp"
      android:text="한줄소개"
      android:textSize="20sp"
      android:lineHeight="23sp"
      android:textStyle="bold"
      android:textColor="#006BCE"
      />
  <EditText
      android:id="@+id/introduce_ment"
      android:width="236dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintStart_toStartOf="@id/name"
      app:layout_constraintTop_toBottomOf="@id/addr"
      android:layout_marginTop="31dp"
      android:hint="소개 입력"
      android:textSize="16sp"
      android:lineHeight="18sp"
      android:textColor="#6B000000"
      android:backgroundTint="#006BCE"

      />
  <CheckBox
      android:id="@+id/agree_cb"
      app:layout_constraintTop_toBottomOf="@id/introduce_ment"
      android:layout_marginTop="61dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="개인 정보 수집에 동의하시겠습니까?"
      android:textSize="12sp"
      android:lineHeight="14sp"
      android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
      android:button="@null"
      app:layout_constraintStart_toStartOf="@id/setting_btn"
      android:layout_marginLeft="64dp"
    />
  <Button
      android:id="@+id/setting_btn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:width="320dp"
      android:height="45dp"
      android:background="@drawable/rounded_blue"
      app:layout_constraintTop_toBottomOf="@id/agree_cb"
      android:layout_marginTop="65dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:text="아이디/비밀번호 설정"
      android:textSize="16sp"
      android:lineHeight="22sp"
      android:textColor="@color/white"
      />

</androidx.constraintlayout.widget.ConstraintLayout>
