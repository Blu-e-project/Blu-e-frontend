        android:layout_marginRight="101dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/mentoringTitleView"/>
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textSize="18sp"
        android:lineHeight="22sp"
        android:textStyle="bold"
        android:text="내가 쓴 글"
        android:textColor="@color/black"
        android:layout_marginLeft="19dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/mentoringTitleView"/>

    <TextView
        android:id="@+id/ment_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="▷ 원하는 멘토와 매칭해봅시다! "
        app:layout_constraintTop_toBottomOf="@id/mentoringTitleView"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:lineHeight="18sp"
        android:textStyle="bold"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_mentee"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/ment_tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/recyclerview_mentor_card"
        />
    <!--<TextView
