<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MentorSignUpActivity">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/sky"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        ></View>

    <ImageButton
        android:id="@+id/backToCenter_d"
        android:layout_width="10dp"
        android:layout_height="14dp"
        android:background="@android:color/transparent"
        android:src="@drawable/arrow_forward_ios"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:lineHeight="22sp"
        android:text="멘토 회원가입"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toEndOf="@id/backToCenter_d"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/logo"
        app:layout_constraintStart_toStartOf="@+id/mentor_btn"
        app:layout_constraintTop_toBottomOf="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="126dp"
        android:fontFamily="sans-serif"
        android:lineHeight="47sp"
        android:text="@string/app_name"
        android:textColor="#006BCE"
        android:textFontWeight="700"
        android:textSize="40sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/ment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:lineHeight="22sp"
        android:text="@string/askMentorSignUp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/logo"
        app:layout_constraintTop_toBottomOf="@id/logo"
        android:textSize="16sp" />

    <Button
        android:id="@+id/mentor_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_gravity="center"
        android:width="320dp"
        android:height="45dp"
        android:background="@drawable/rounded_blue"
        android:lineHeight="22sp"
        android:text="Blu-e멘토 계정 만들기"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textFontWeight="600"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ment"
        />
    <TextView
        android:layout_width="310dp"
        android:layout_height="2dp"
        android:layout_gravity="center"
        android:layout_marginTop="23dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mentor_btn"
        android:background="@drawable/hr_gray"/>
    <TextView
        android:id="@+id/sns"
        app:layout_constraintTop_toBottomOf="@+id/mentor_btn"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:layout_marginTop="46dp"
        android:text="@string/snsSignUp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:lineHeight="16sp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/sns"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="23dp"
        >
        <ImageButton
            android:id="@+id/kakao_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/kakao_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/naver_icon"

            tools:ignore="MissingConstraints" />
        <ImageButton
            android:id="@+id/naver_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/naver_icon"
            app:layout_constraintStart_toEndOf="@+id/kakao_icon"
            app:layout_constraintEnd_toStartOf="@+id/google_icon"
            android:layout_marginRight="19.56dp"
            android:layout_marginLeft="19.56dp"
            tools:ignore="MissingConstraints" />
        <ImageButton
            android:id="@+id/google_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/google_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/naver_icon"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>