<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/mentoringTitleView"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/sky"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></View>

    <ImageButton
        android:id="@+id/backToCenter"
        android:layout_width="10dp"
        android:layout_height="14dp"
        android:background="@android:color/transparent"
        android:src="@drawable/arrow_forward_ios"
        app:layout_constraintEnd_toStartOf="@+id/textView"
        android:layout_marginRight="101dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/mentoringTitleView"/>
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textSize="18sp"
        android:lineHeight="22sp"
        android:textStyle="bold"
        android:text="내가 쓴 글/ 내가 단 댓글"
        android:textColor="@color/black"
        android:layout_marginLeft="19dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/mentoringTitleView"/>

    <TextView
        android:id="@+id/ment_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="▷ 멘티를 구하고 있어요!"
        app:layout_constraintTop_toBottomOf="@id/mentoringTitleView"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:lineHeight="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/rv_data"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_data"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/ment_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>