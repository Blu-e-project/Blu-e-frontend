<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="150dp"
    android:layout_height="110dp"
    android:layout_marginRight="20dp">

    <androidx.cardview.widget.CardView
        android:layout_width="140dp"
        android:layout_height="100dp"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardElevation="10dp"
        app:cardMaxElevation="20dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:inputType="none"
            android:ems="10"
            android:id="@+id/menteeCardTitle"
            android:background="#BAC9FF"
            android:textStyle="bold"
            android:textSize="10sp"
            android:gravity="center_horizontal"
            android:textAlignment="textStart"
            android:paddingLeft="9dp"
            android:paddingTop="10dp"
            tools:ignore="RtlCompat" />
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp">
            <TextView
                android:text="[희망과목]"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/menteeCardDesiredSubjectTitle"
                android:textSize="10sp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/menteeCardDesiredSubject"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp">
            <TextView
                android:text="[희망기간]"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/menteeCardDesiredPeriodTitle"
                android:textSize="10sp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/menteeCardDesiredStartPeriod"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/wave"
                android:text="~"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/menteeCardDesiredEndPeriod"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp">
            <TextView
                android:text="[멘토링 방식]"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/menteeCardMethodTitle"
                android:textSize="10sp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/menteeCardMethod"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"/>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="3dp">
            <TextView
                android:text="[지역]"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/menteeCardAreaTitle"
                android:textSize="10sp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/menteeCardArea"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp"/>
        </TableRow>
    </LinearLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>