<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="140dp"
        android:layout_height="100dp"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="16dp"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardElevation="15dp"
        app:cardMaxElevation="20dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:inputType="none"
                android:ems="10"
                android:id="@+id/questionCardSubject"
                android:background="#BAC9FF"
                android:textStyle="bold"
                android:textSize="10sp"
                android:gravity="center_horizontal"
                android:textAlignment="textStart"
                android:paddingLeft="9dp"
                android:paddingTop="10dp"
                tools:ignore="RtlCompat" />
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="3dp"
                android:paddingLeft="3dp">
                <TextView
                    android:text="[문제]"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/questionDesiredProblemTitle"
                    android:textSize="10sp"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/questionDesiredProblem"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="5dp"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="3dp"
                android:paddingLeft="3dp">
                <TextView
                    android:text="[단원]"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/questionCardDesiredrangeTitle"
                    android:textSize="10sp"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/questionCardDesiredrange"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="5dp"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="3dp"
                android:paddingLeft="3dp">
                <TextView
                    android:text="[질문]"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/questionCardDesiredQuestionTitle"
                    android:textSize="10sp"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/questionCardDesiredQuestion"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="5dp"/>
            </TableRow>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>