<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@color/sky"
    android:theme="@style/Theme.MainToolbar"
    app:contentInsetStart="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="72dp"
            android:layout_height="56dp"
            android:layout_marginStart="148dp"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:text="Blu-e"
            android:textColor="#006bce"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/customerCenter"
            android:layout_width="20.7dp"
            android:layout_height="20.7dp"
            android:layout_marginStart="322.7dp"
            android:layout_marginTop="17.7dp"
            android:layout_marginEnd="17dp"
            android:background="@drawable/icon_on_off"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.appcompat.widget.Toolbar>